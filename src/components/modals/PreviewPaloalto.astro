---
import { getIconPath, getIconColor } from '../../utils/icons';
const icon = getIconPath('paloaltonetworks');
const color = getIconColor('paloaltonetworks');
---

<div id="preview-paloalto" class="skill-preview-modal" data-detail-modal="modal-paloalto">
    <div class="skill-preview-header">
        <div class="skill-preview-icon">
            <svg viewBox="0 0 24 24" fill={color}><path d={icon} /></svg>
        </div>
        <h3 class="skill-preview-title">Palo Alto</h3>
    </div>
    <p class="skill-preview-desc">Configuration de firewalls Next-Gen. Politiques de sécurité, NAT, VPN GlobalProtect.</p>
    <div class="skill-preview-tags">
        <span class="skill-preview-tag">PAN-OS</span>
        <span class="skill-preview-tag">GlobalProtect</span>
        <span class="skill-preview-tag">Threat Prevention</span>
    </div>
    <button class="skill-preview-cta">
        En savoir plus
        <svg viewBox="0 0 24 24"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
    </button>
</div>
