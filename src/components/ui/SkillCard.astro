---
/**
 * SkillCard - Airy style skill card component
 * V2: No border, subtle glow hover, direct modal trigger
 */
import { getIconPath, getIconColor } from '../../utils/icons';

interface Props {
    id: string;
    title: string;
    iconName: string;
}

const { id, title, iconName } = Astro.props;
const iconPath = getIconPath(iconName);
const iconColor = getIconColor(iconName);

// Handle special viewBox for Claude icon (16x16)
const viewBox = iconName === 'claude' ? '0 0 16 16' : '0 0 24 24';
---

<div class="skill-card" data-skill={id}>
    <div class="skill-icon">
        <svg viewBox={viewBox} fill={iconColor}>
            <path d={iconPath} />
        </svg>
    </div>
    <h3 class="skill-title">{title}</h3>
</div>

<style>
    .skill-card {
        background: transparent;
        border: none;
        padding: 1rem 0.5rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        cursor: pointer;
        opacity: 0;
        transform: translateY(20px);
    }

    .skill-card:hover {
        transform: translateY(-3px);
        filter: drop-shadow(0 8px 25px rgba(0, 255, 255, 0.15));
    }

    .skill-card:hover .skill-icon svg {
        filter: brightness(1.15) drop-shadow(0 0 8px currentColor);
    }

    .skill-card:hover .skill-title {
        color: var(--neon-cyan);
    }

    .skill-icon {
        width: 64px;
        height: 64px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 0.75rem;
    }

    .skill-icon svg {
        width: 48px;
        height: 48px;
        transition: all 0.3s ease;
    }

    .skill-title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 0.9rem;
        letter-spacing: 0.08em;
        text-align: center;
        margin: 0;
        color: var(--gray-light);
        text-transform: uppercase;
        transition: color 0.3s ease;
    }

    @media (max-width: 768px) {
        .skill-icon {
            width: 48px;
            height: 48px;
        }
        .skill-icon svg {
            width: 36px;
            height: 36px;
        }
        .skill-title {
            font-size: 0.75rem;
        }
    }

    @media (max-width: 480px) {
        .skill-card {
            padding: 0.75rem 0.25rem;
        }
        .skill-icon {
            width: 40px;
            height: 40px;
            margin-bottom: 0.5rem;
        }
        .skill-icon svg {
            width: 28px;
            height: 28px;
        }
        .skill-title {
            font-size: 0.65rem;
        }
    }
</style>
