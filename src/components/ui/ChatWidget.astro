---
/**
 * ChatWidget - Proto_Bot
 * Widget chatbot flottant avec streaming SSE
 */
---

<!-- Bouton flottant -->
<button class="chat-toggle" id="chat-toggle" aria-label="Ouvrir le chat" title="Proto_Bot">
    <svg class="chat-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/>
    </svg>
    <span class="chat-pulse"></span>
</button>

<!-- Fenêtre de chat -->
<div class="chat-window" id="chat-window" role="dialog" aria-labelledby="chat-title" aria-hidden="true">
    <!-- Header -->
    <header class="chat-header">
        <div class="chat-header-info">
            <div class="chat-status-dot"></div>
            <h3 id="chat-title">Proto_Bot</h3>
        </div>
        <button class="chat-close" id="chat-close" aria-label="Fermer le chat">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 6L6 18M6 6l12 12"/>
            </svg>
        </button>
    </header>

    <!-- Zone de messages -->
    <div class="chat-messages" id="chat-messages">
        <!-- Message d'accueil injecté dynamiquement par JS -->

        <!-- Suggestions -->
        <div class="chat-suggestions" id="chat-suggestions">
            <button class="suggestion-chip" data-suggestion="C'est quoi le Protolab ?">
                C'est quoi le Protolab ?
            </button>
            <button class="suggestion-chip" data-suggestion="Quelles technos sont utilisées ?">
                Quelles technos sont utilisées ?
            </button>
            <button class="suggestion-chip" data-suggestion="Comment fonctionne le monitoring ?">
                Comment fonctionne le monitoring ?
            </button>
        </div>
    </div>

    <!-- Zone de saisie -->
    <div class="chat-input-area">
        <input
            type="text"
            class="chat-input"
            id="chat-input"
            placeholder="Posez votre question..."
            autocomplete="off"
        />
        <button class="chat-send" id="chat-send" aria-label="Envoyer" disabled>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 2L11 13M22 2l-7 20-4-9-9-4 20-7z"/>
            </svg>
        </button>
    </div>

    <!-- Indicateur de chargement -->
    <div class="chat-loading" id="chat-loading" hidden>
        <span class="loading-dot"></span>
        <span class="loading-dot"></span>
        <span class="loading-dot"></span>
    </div>
</div>

<style is:global>
    /* ===== Variables locales ===== */
    :root {
        --chat-bg: #0a0a0a;
        --chat-bg-secondary: #1a1a1a;
        --chat-border: rgba(0, 255, 255, 0.2);
        --chat-accent: #00ffff;
        --chat-accent-secondary: #ff0080;
        --chat-text: #ffffff;
        --chat-text-muted: #888888;
        --chat-radius: 12px;
        --chat-transition: 0.3s ease;
        --chat-transition-smooth: 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }

    /* ===== Bouton flottant ===== */
    .chat-toggle {
        position: fixed;
        bottom: 24px;
        right: 24px;
        width: 56px;
        height: 56px;
        border-radius: 50%;
        background: var(--chat-bg);
        border: 2px solid var(--chat-accent);
        color: var(--chat-accent);
        cursor: pointer;
        z-index: 15000;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all var(--chat-transition);
        box-shadow:
            0 0 20px rgba(0, 255, 255, 0.3),
            0 4px 20px rgba(0, 0, 0, 0.5);
    }

    .chat-toggle:hover {
        transform: scale(1.1);
        border-color: var(--chat-accent-secondary);
        color: var(--chat-accent-secondary);
        box-shadow:
            0 0 30px rgba(255, 0, 128, 0.4),
            0 4px 25px rgba(0, 0, 0, 0.6);
    }

    .chat-toggle:focus-visible {
        outline: 2px solid var(--chat-accent);
        outline-offset: 4px;
    }

    .chat-toggle.active {
        background: var(--chat-accent);
        color: var(--chat-bg);
    }

    .chat-icon {
        width: 28px;
        height: 28px;
    }

    /* Pulse animation */
    .chat-pulse {
        position: absolute;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        border: 2px solid var(--chat-accent);
        animation: pulse 2s infinite;
        pointer-events: none;
    }

    @keyframes pulse {
        0% {
            transform: scale(1);
            opacity: 1;
        }
        100% {
            transform: scale(1.5);
            opacity: 0;
        }
    }

    .chat-toggle.active .chat-pulse {
        display: none;
    }

    /* ===== Fenêtre de chat ===== */
    .chat-window {
        position: fixed;
        bottom: 96px;
        right: 24px;
        width: 380px;
        max-height: 600px;
        background: var(--chat-bg);
        border: 1px solid var(--chat-border);
        border-radius: var(--chat-radius);
        z-index: 15000;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        box-shadow:
            0 0 40px rgba(0, 255, 255, 0.15),
            0 8px 32px rgba(0, 0, 0, 0.6);

        /* Animation */
        opacity: 0;
        visibility: hidden;
        transform: translateY(20px) scale(0.95);
        transition:
            opacity var(--chat-transition-smooth),
            visibility var(--chat-transition-smooth),
            transform var(--chat-transition-smooth);
    }

    .chat-window.open {
        opacity: 1;
        visibility: visible;
        transform: translateY(0) scale(1);
    }

    /* Fond noir simple - pas de grille ni glow */

    /* ===== Header ===== */
    .chat-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 16px;
        background: var(--chat-bg-secondary);
        border-bottom: 1px solid var(--chat-border);
        position: relative;
        z-index: 1;
    }

    .chat-header-info {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .chat-status-dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: #00ff88;
        box-shadow: 0 0 10px rgba(0, 255, 136, 0.6);
        animation: statusPulse 2s infinite;
    }

    @keyframes statusPulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
    }

    .chat-header h3 {
        margin: 0;
        font-family: 'Bebas Neue', sans-serif;
        font-size: 1.25rem;
        letter-spacing: 0.05em;
        color: var(--chat-text);
        text-transform: none;
    }

    .chat-close {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: transparent;
        border: 1px solid transparent;
        border-radius: 6px;
        color: var(--chat-text-muted);
        cursor: pointer;
        transition: all var(--chat-transition);
    }

    .chat-close:hover {
        color: var(--chat-accent-secondary);
        border-color: var(--chat-accent-secondary);
    }

    .chat-close svg {
        width: 18px;
        height: 18px;
    }

    /* ===== Zone de messages ===== */
    .chat-messages {
        flex: 1;
        overflow-y: auto;
        padding: 16px;
        display: flex;
        flex-direction: column;
        gap: 16px;
        position: relative;
        z-index: 1;
        min-height: 300px;
        max-height: 400px;
    }

    /* Custom scrollbar - Style moderne */
    .chat-messages::-webkit-scrollbar {
        width: 8px;
    }

    .chat-messages::-webkit-scrollbar-track {
        background: var(--chat-bg);
    }

    .chat-messages::-webkit-scrollbar-thumb {
        background: #333;
        border-radius: 4px;
    }

    .chat-messages::-webkit-scrollbar-thumb:hover {
        background: var(--chat-accent);
    }

    /* ===== Messages ===== */
    .message {
        max-width: 90%;
        animation: messageIn 0.3s ease;
    }

    @keyframes messageIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .message.user {
        align-self: flex-end;
    }

    .message.assistant {
        align-self: flex-start;
        max-width: 100%;
    }

    /* ===== Message utilisateur (bulle cyan) ===== */
    .message.user .message-content {
        padding: 12px 16px;
        font-family: 'Space Mono', monospace;
        font-size: 0.85rem;
        line-height: 1.5;
        text-transform: none;
        background: linear-gradient(135deg, var(--chat-accent) 0%, #0088aa 100%);
        color: var(--chat-bg);
        border-radius: 18px 18px 4px 18px;
    }

    /* ===== Message assistant (style LLM moderne) ===== */
    .message.assistant .message-content {
        /* Police & Taille - Standard LLM interfaces */
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        font-size: 15px;
        line-height: 1.7;
        text-transform: none;

        /* Couleurs */
        color: #e8e8e8;
        background: rgba(0, 255, 255, 0.03);

        /* Espacement */
        padding: 20px;

        /* Bordure gauche accent */
        border-left: 3px solid var(--chat-accent);
        border-radius: 0 8px 8px 0;
    }

    /* Paragraphes dans messages assistant */
    .message.assistant .message-content p {
        margin-bottom: 12px;
    }

    .message.assistant .message-content p:last-child {
        margin-bottom: 0;
    }

    /* ===== Markdown dans les messages ===== */
    .message-content strong {
        color: var(--chat-accent);
        font-weight: 600;
    }

    /* Code inline (termes techniques) */
    .message-content code {
        font-family: 'JetBrains Mono', monospace;
        font-size: 13px;
        background: rgba(0, 255, 255, 0.15);
        color: var(--chat-accent);
        padding: 2px 6px;
        border-radius: 4px;
    }

    /* Blocs de code */
    .message-content pre {
        font-family: 'JetBrains Mono', monospace;
        font-size: 13px;
        background: rgba(0, 255, 255, 0.1);
        padding: 12px;
        border-radius: 6px;
        overflow-x: auto;
        margin: 12px 0;
        border: 1px solid var(--chat-border);
    }

    .message-content pre code {
        background: transparent;
        padding: 0;
        color: var(--chat-text);
    }

    .message-content ul, .message-content ol {
        margin: 12px 0;
        padding-left: 24px;
    }

    .message-content li {
        margin: 6px 0;
    }

    /* Message d'erreur */
    .message.error .message-content {
        font-family: 'Space Mono', monospace;
        font-size: 0.85rem;
        padding: 12px 16px;
        background: rgba(255, 0, 128, 0.15);
        border-left: 3px solid var(--chat-accent-secondary);
        border-radius: 0 8px 8px 0;
        color: var(--chat-accent-secondary);
    }

    /* ===== Suggestions ===== */
    .chat-suggestions {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-top: 8px;
    }

    .suggestion-chip {
        padding: 8px 14px;
        background: transparent;
        border: 1px solid var(--chat-border);
        border-radius: 20px;
        color: var(--chat-text-muted);
        font-family: 'Space Mono', monospace;
        font-size: 0.75rem;
        cursor: pointer;
        transition: all var(--chat-transition);
        text-transform: none;
    }

    .suggestion-chip:hover {
        border-color: var(--chat-accent);
        color: var(--chat-accent);
        background: rgba(0, 255, 255, 0.05);
    }

    .chat-suggestions.hidden {
        display: none;
    }

    /* ===== Zone de saisie ===== */
    .chat-input-area {
        display: flex;
        gap: 10px;
        padding: 16px;
        background: var(--chat-bg-secondary);
        border-top: 1px solid var(--chat-border);
        position: relative;
        z-index: 1;
    }

    .chat-input {
        flex: 1;
        padding: 12px 16px;
        background: var(--chat-bg);
        border: 1px solid var(--chat-border);
        border-radius: 8px;
        color: var(--chat-text);
        font-family: 'Space Mono', monospace;
        font-size: 0.85rem;
        outline: none;
        transition: all var(--chat-transition);
        text-transform: none;
    }

    .chat-input::placeholder {
        color: var(--chat-text-muted);
        text-transform: none;
    }

    .chat-input:focus {
        border-color: var(--chat-accent);
        box-shadow: 0 0 10px rgba(0, 255, 255, 0.2);
    }

    .chat-send {
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--chat-accent);
        border: none;
        border-radius: 8px;
        color: var(--chat-bg);
        cursor: pointer;
        transition: all var(--chat-transition);
    }

    .chat-send:hover:not(:disabled) {
        background: var(--chat-accent-secondary);
        transform: scale(1.05);
    }

    .chat-send:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .chat-send svg {
        width: 20px;
        height: 20px;
    }

    /* ===== Indicateur de chargement ===== */
    .chat-loading {
        position: absolute;
        bottom: 80px;
        left: 16px;
        display: flex;
        gap: 4px;
        padding: 12px 16px;
        background: var(--chat-bg-secondary);
        border: 1px solid var(--chat-border);
        border-radius: 12px;
        z-index: 2;
    }

    .chat-loading[hidden] {
        display: none;
    }

    .loading-dot {
        width: 8px;
        height: 8px;
        background: var(--chat-accent);
        border-radius: 50%;
        animation: loadingBounce 1.4s infinite ease-in-out both;
    }

    .loading-dot:nth-child(1) { animation-delay: -0.32s; }
    .loading-dot:nth-child(2) { animation-delay: -0.16s; }
    .loading-dot:nth-child(3) { animation-delay: 0s; }

    @keyframes loadingBounce {
        0%, 80%, 100% {
            transform: scale(0);
            opacity: 0.5;
        }
        40% {
            transform: scale(1);
            opacity: 1;
        }
    }

    /* ===== Responsive ===== */
    @media (max-width: 768px) {
        .chat-toggle {
            width: 50px;
            height: 50px;
            bottom: 20px;
            right: 20px;
        }

        .chat-icon {
            width: 24px;
            height: 24px;
        }

        .chat-window {
            width: calc(100vw - 40px);
            right: 20px;
            bottom: 86px;
            max-height: 70vh;
        }
    }

    @media (max-width: 480px) {
        .chat-toggle {
            width: 48px;
            height: 48px;
            bottom: 16px;
            right: 16px;
        }

        .chat-window {
            position: fixed;
            inset: 0;
            width: 100vw;
            max-width: 100vw;
            height: 100vh;
            max-height: 100vh;
            border-radius: 0;
            z-index: 100000;
            bottom: 0;
            right: 0;
        }

        .chat-messages {
            min-height: 0;
            max-height: none;
            flex: 1;
        }

        .chat-header {
            padding-top: calc(16px + env(safe-area-inset-top, 0));
        }

        .chat-input-area {
            padding-bottom: calc(16px + env(safe-area-inset-bottom, 0));
        }
    }

    /* ===== Réduction des animations si préférence ===== */
    @media (prefers-reduced-motion: reduce) {
        .chat-pulse,
        .chat-status-dot,
        .loading-dot {
            animation: none;
        }

        .chat-window,
        .message {
            transition-duration: 0.01ms;
            animation-duration: 0.01ms;
        }
    }
</style>
