---
// Profile Section Component - Utilise sections.json
import sectionsData from '../../data/sections.json';
import type { ProfileContent } from '../../types/content';

const profile = sectionsData.profile as ProfileContent;
---

<section class="section" id="profil">
    <div class="profile-container">
        <div class="section-header">
            <span class="section-label">{profile.sectionLabel}</span>
            <h2 class="section-title" set:html={profile.sectionTitle}></h2>
            <p class="section-desc">{profile.sectionDesc}</p>
        </div>

        <div class="profile-grid">
        <!-- Left Panel: Terminal Display -->
        <div class="profile-terminal-wrapper" aria-label="Terminal affichant les informations de profil">
            <div class="terminal-header">
                <div class="terminal-buttons">
                    <span class="t-btn close"></span>
                    <span class="t-btn min"></span>
                    <span class="t-btn max"></span>
                </div>
                <div class="terminal-title">~/profile/adrien.conf</div>
            </div>
            <div class="profile-terminal-body">
                <div class="term-line">
                    <span class="term-prompt">user@protolab:~$</span>
                    <span class="term-cmd">cat /etc/profile/adrien.conf</span>
                </div>
                <div class="term-output">
                    USER: {profile.terminal.user}<br>
                    ROLE: {profile.terminal.role}<br>
                    AGE: {profile.terminal.age}<br>
                    STATUS: <span class="highlight-magenta">████████████████████ {profile.terminal.status}</span>
                </div>

                <div class="term-line">
                    <span class="term-prompt">user@protolab:~$</span>
                    <span class="term-cmd">cat /var/log/career.log</span>
                </div>
                <div class="term-output">
                    {profile.terminal.careerLog.map((line: string, i: number) => (
                        <Fragment>
                            &gt; {i === 1 ? <span class="highlight-magenta">{line}</span> : line}<br>
                        </Fragment>
                    ))}
                </div>

                <div class="term-text-block">
                    {profile.terminal.story.map((line: string, i: number) => (
                        <p class={i === 1 ? 'text-neon-green' : ''}>{line}</p>
                    ))}
                </div>

                <div class="term-line">
                    <span class="term-prompt">user@protolab:~$</span>
                    <span class="blink">█</span>
                </div>
            </div>
        </div>

        <!-- Right Panel: Soft Skills -->
        <div class="soft-skills-wrapper">
            <h3 class="soft-title">Soft Skills ///</h3>

            {profile.softSkills.map((skill) => (
                <div class="soft-skill-item">
                    <div class="soft-info">
                        <span class="soft-label">{skill.label}</span>
                        <span class="soft-val">{skill.value}%</span>
                    </div>
                    <div class="soft-bar-bg">
                        <div class={`soft-bar-fill ${skill.colorClass}`} style={`width: ${skill.value}%`}></div>
                    </div>
                </div>
            ))}

            <!-- Certifications Section -->
            <div class="certifications-section">
                <h3 class="cert-title">Certifications ///</h3>
                <div class="cert-badges-grid">
                    <!-- Cisco Badge -->
                    <a href="https://www.credly.com/badges/2a4bd7fc-138e-4ab0-9129-c0c9d10bab71/public_url"
                       target="_blank"
                       rel="noopener noreferrer"
                       class="cert-badge-link"
                       data-cert-preview="preview-cisco"
                       aria-label="Voir la certification Cisco Networking Basics sur Credly"
                       aria-describedby="preview-cisco">
                        <div class="cert-badge-wrapper">
                            <img src="/images/badges/cisco-networking-basics.png"
                                 alt="Cisco Networking Basics - Certification"
                                 class="cert-badge-img"
                                 width="150"
                                 height="150" />
                            <span class="cert-badge-name">Networking Basics</span>
                            <span class="cert-badge-issuer">Cisco</span>
                            <div class="cert-badge-glow"></div>
                        </div>
                    </a>
                    <!-- Placeholder pour badges futurs -->
                    <div class="cert-badge-placeholder">
                        <div class="cert-placeholder-inner">
                            <span class="cert-placeholder-icon">+</span>
                            <span class="cert-placeholder-text">En cours...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

    <!-- Cisco Certification Preview Modal -->
    <div id="preview-cisco" class="cert-preview-modal">
        <div class="cert-preview-header">
            <div class="cert-preview-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M2 12h20M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
                </svg>
            </div>
            <div class="cert-preview-title-block">
                <h3 class="cert-preview-title glitch" data-text="NETWORKING BASICS">NETWORKING BASICS</h3>
                <span class="cert-preview-issuer">Cisco NetAcad</span>
            </div>
        </div>
        <div class="cert-preview-divider">────────────────────────────</div>
        <div class="cert-preview-meta">
            <span class="cert-preview-duration">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="14" height="14">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M12 6v6l4 2"/>
                </svg>
                Durée : 22h
            </span>
        </div>
        <ul class="cert-preview-skills">
            <li><span class="check">✓</span> Fondamentaux réseau & topologies</li>
            <li><span class="check">✓</span> Modèles OSI/TCP-IP & protocoles</li>
            <li><span class="check">✓</span> Adressage IP & subnetting</li>
            <li><span class="check">✓</span> Switching & routing basique</li>
            <li><span class="check">✓</span> Sécurité réseau essentiels</li>
        </ul>
        <a href="https://www.credly.com/badges/2a4bd7fc-138e-4ab0-9129-c0c9d10bab71/public_url"
           target="_blank"
           rel="noopener noreferrer"
           class="cert-preview-cta">
            Voir sur Credly
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6M15 3h6v6M10 14L21 3"/>
            </svg>
        </a>
    </div>
</section>


<style>
    .section { position: relative; z-index: 1; padding: 8rem 2rem; }

    .section-header { text-align: center; margin-bottom: 5rem; }

    .section-label {
        display: inline-block;
        font-family: 'Space Mono', monospace;
        font-size: 0.75rem;
        font-weight: 700;
        letter-spacing: 0.3em;
        text-transform: uppercase;
        color: var(--neon-cyan);
        margin-bottom: 1rem;
        padding: 0.5rem 1rem;
        border: 1px solid var(--neon-cyan);
    }

    .section-title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: clamp(3rem, 8vw, 6rem);
        letter-spacing: 0.02em;
        line-height: 1;
        margin-bottom: 1.5rem;
    }

    .section-title span { color: var(--neon-cyan); }

    .section-desc {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 1.2rem;
        color: var(--gray-light);
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.4;
        letter-spacing: 0.05em;
        text-transform: uppercase;
    }

    .profile-container { max-width: 1400px; margin: 0 auto; }

    /* ========================================
       CERTIFICATIONS SECTION
       ======================================== */
    .certifications-section {
        margin-top: 1.5rem;
        padding-top: 1.25rem;
        border-top: 1px solid rgba(0, 255, 255, 0.2);
    }

    .cert-title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 20px;
        color: var(--white);
        margin-bottom: 1rem;
        letter-spacing: 1px;
        position: relative;
    }

    .cert-title::after {
        content: '';
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 50px;
        height: 2px;
        background: var(--neon-cyan);
    }

    .cert-badges-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        align-items: flex-start;
    }

    /* Badge link */
    .cert-badge-link {
        text-decoration: none;
        display: block;
    }

    .cert-badge-wrapper {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 0.5rem;
        transition: all 0.3s ease;
    }

    .cert-badge-link:hover .cert-badge-wrapper {
        transform: translateY(-3px);
    }

    .cert-badge-img {
        display: block;
        width: 90px;
        height: auto;
        margin-bottom: 0.5rem;
        transition: all 0.3s ease;
    }

    .cert-badge-name {
        display: block;
        font-family: 'Space Mono', monospace;
        font-size: 0.65rem;
        font-weight: 700;
        color: var(--white);
        text-transform: uppercase;
        letter-spacing: 0.03em;
        margin-bottom: 0.15rem;
    }

    .cert-badge-issuer {
        display: block;
        font-family: 'Space Mono', monospace;
        font-size: 0.6rem;
        color: var(--neon-cyan);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .cert-badge-glow {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 80%;
        height: 80%;
        background: var(--neon-cyan);
        opacity: 0.15;
        filter: blur(20px);
        z-index: -1;
        transition: all 0.3s ease;
        pointer-events: none;
    }

    .cert-badge-link:hover .cert-badge-glow {
        background: var(--neon-magenta);
        opacity: 0.3;
    }

    /* Placeholder pour badges futurs */
    .cert-badge-placeholder {
        width: 110px;
        height: 140px;
        border: 2px dashed var(--gray-mid);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    .cert-badge-placeholder:hover {
        border-color: var(--neon-cyan);
        background: rgba(0, 255, 255, 0.05);
    }

    .cert-placeholder-inner {
        text-align: center;
        color: var(--gray-light);
    }

    .cert-placeholder-icon {
        display: block;
        font-size: 1.5rem;
        margin-bottom: 0.3rem;
        color: var(--gray-mid);
        transition: color 0.3s ease;
    }

    .cert-badge-placeholder:hover .cert-placeholder-icon {
        color: var(--neon-cyan);
    }

    .cert-placeholder-text {
        font-family: 'Space Mono', monospace;
        font-size: 0.6rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    @media (max-width: 768px) {
        .section { padding: 5rem 1.5rem; }
        .section-header { margin-bottom: 3rem; }

        .certifications-section {
            margin-top: 1.5rem;
        }

        .cert-badges-grid {
            justify-content: center;
        }

        .cert-badge-img {
            width: 80px;
        }

        .cert-badge-placeholder {
            width: 100px;
            height: 130px;
        }
    }
</style>
