---
/**
 * Skills Section Component - V2
 * Grid 4x3 (12 skills), modal unique dynamique
 */
import SkillCard from '../ui/SkillCard.astro';
import skillsData from '../../data/skills.json';
import type { SkillData } from '../../types/content';

const skills = skillsData as SkillData[];
---

<section class="section section-dark" id="competences">
    <div class="skills-container">
        <div class="section-header">
            <span class="section-label">Expertise</span>
            <h2 class="section-title">Mes <span>Competences</span></h2>
            <p class="section-desc">Technologies et outils maitrises au cours de ma formation TSSR et de mes projets personnels sur mon homelab Protolab.</p>
        </div>

        <div class="skills-grid">
            {skills.map((skill) => (
                <SkillCard
                    id={skill.id}
                    title={skill.previewTitle}
                    iconName={skill.icon}
                />
            ))}
        </div>
    </div>

    <!-- Modal unique dynamique -->
    <div id="skill-modal-overlay" class="modal-overlay">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">
                    <div class="modal-icon"></div>
                    <span class="modal-title-text"></span>
                </h2>
                <button class="modal-close" aria-label="Fermer">
                    <svg viewBox="0 0 24 24"><path d="M18 6L6 18M6 6l12 12"/></svg>
                </button>
            </div>
            <div class="modal-body">
                <p class="modal-desc"></p>
                <div class="modal-tags"></div>
                <div class="modal-sections"></div>
            </div>
        </div>
    </div>
</section>

<!-- Inject skills data for JS -->
<script is:inline define:vars={{ skillsData: skills }}>
    window.skillsDataForModal = skillsData;
</script>

<style>
    .section { position: relative; z-index: 1; padding: 8rem 2rem; }
    .section-dark { background: transparent; }

    .section-header { text-align: center; margin-bottom: 5rem; }

    .section-label {
        display: inline-block;
        font-family: 'Space Mono', monospace;
        font-size: 0.75rem;
        font-weight: 700;
        letter-spacing: 0.3em;
        text-transform: uppercase;
        color: var(--neon-cyan);
        margin-bottom: 1rem;
        padding: 0.5rem 1rem;
        border: 1px solid var(--neon-cyan);
        opacity: 0;
        transform: translateY(20px);
    }

    .section-title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: clamp(3rem, 8vw, 6rem);
        letter-spacing: 0.02em;
        line-height: 1;
        margin-bottom: 1.5rem;
        opacity: 0;
        transform: translateY(30px);
    }

    .section-title span { color: var(--neon-cyan); }

    .section-desc {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 1.2rem;
        color: var(--gray-light);
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.4;
        letter-spacing: 0.05em;
        text-transform: uppercase;
        opacity: 0;
        transform: translateY(20px);
    }

    .skills-container { max-width: 1400px; margin: 0 auto; }

    /* Grid 4x3 */
    .skills-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
        max-width: 800px;
        margin: 0 auto;
    }

    /* Modal Overlay - Fade-in (ID spécifique pour surcharger global.css) */
    #skill-modal-overlay {
        position: fixed;
        top: 60px; /* Hauteur navbar */
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(4px);
        z-index: 20000;
        opacity: 0;
        visibility: hidden;
        transition: all 0.4s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
    }

    #skill-modal-overlay.active {
        opacity: 1;
        visibility: visible;
    }

    /* Modal Content (ID spécifique) */
    #skill-modal-overlay .modal-content {
        background: var(--gray-dark, #1a1a1a);
        border: 1px solid rgba(0, 255, 255, 0.2);
        padding: 1.5rem;
        max-width: 500px;
        width: 90%;
        max-height: calc(100vh - 120px); /* navbar (60px) + marges (60px) */
        overflow-y: auto;
        transform: translateY(20px);
        opacity: 0;
        transition: all 0.4s ease;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    }

    /* Désactiver les pseudo-éléments de global.css */
    #skill-modal-overlay .modal-content::before,
    #skill-modal-overlay .modal-content::after {
        display: none;
    }

    #skill-modal-overlay.active .modal-content {
        transform: translateY(0);
        opacity: 1;
    }

    #skill-modal-overlay .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        margin-bottom: 0.75rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    #skill-modal-overlay .modal-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-family: 'Bebas Neue', sans-serif;
        font-size: 1.4rem;
        letter-spacing: 0.05em;
        margin: 0;
        color: var(--neon-cyan);
    }

    #skill-modal-overlay .modal-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--gray-mid, #2a2a2a);
        flex-shrink: 0;
    }

    #skill-modal-overlay .modal-icon :global(svg) {
        width: 24px;
        height: 24px;
    }

    #skill-modal-overlay .modal-close {
        background: transparent;
        border: none;
        cursor: pointer;
        padding: 0.5rem;
        color: var(--gray-light);
        transition: color 0.3s ease;
    }

    #skill-modal-overlay .modal-close:hover {
        color: var(--neon-cyan);
    }

    #skill-modal-overlay .modal-close svg {
        width: 24px;
        height: 24px;
        stroke: currentColor;
        stroke-width: 2;
        fill: none;
    }

    #skill-modal-overlay .modal-desc {
        color: var(--gray-lighter, #b0b0b0);
        font-size: 0.8rem;
        line-height: 1.5;
        margin-bottom: 0.75rem;
    }

    #skill-modal-overlay .modal-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.4rem;
        margin-bottom: 0.75rem;
    }

    #skill-modal-overlay :global(.modal-tag) {
        padding: 0.3rem 0.6rem;
        font-size: 0.6rem;
        font-weight: 700;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        color: var(--neon-cyan);
        border: 1px solid rgba(0, 255, 255, 0.3);
        background: rgba(0, 255, 255, 0.05);
    }

    #skill-modal-overlay .modal-sections {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        margin-bottom: 0;
    }

    #skill-modal-overlay :global(.modal-section) {
        padding: 0.6rem 0.75rem;
        background: rgba(0, 0, 0, 0.3);
        border-left: 2px solid var(--neon-cyan);
    }

    #skill-modal-overlay :global(.modal-section-title) {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 0.9rem;
        font-weight: 400;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        color: var(--gray-lighter, #b0b0b0);
        margin: 0 0 0.4rem 0;
    }

    #skill-modal-overlay :global(.modal-section ul) {
        margin: 0;
        padding: 0;
        list-style: none;
    }

    #skill-modal-overlay :global(.modal-section li) {
        position: relative;
        padding-left: 0.875rem;
        margin-bottom: 0;
        padding-top: 0.15rem;
        padding-bottom: 0.15rem;
        font-size: 0.75rem;
        color: var(--gray-light);
        line-height: 1.4;
    }

    #skill-modal-overlay :global(.modal-section li::before) {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 4px;
        height: 4px;
        background: var(--neon-cyan);
    }

    @media (max-width: 768px) {
        .section { padding: 5rem 1rem; }
        .section-header { margin-bottom: 2.5rem; }

        .section-title {
            font-size: clamp(2rem, 6vw, 3rem);
        }

        .section-desc {
            font-size: 1rem;
        }

        /* Grid 3 colonnes sur tablette */
        .skills-grid {
            grid-template-columns: repeat(3, 1fr);
            gap: 0.75rem;
        }

        #skill-modal-overlay .modal-content {
            padding: 1.25rem;
        }
    }

    @media (max-width: 480px) {
        .section { padding: 4rem 0.75rem; }

        /* Grid 2 colonnes sur mobile */
        .skills-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 0.5rem;
        }

        #skill-modal-overlay .modal-content {
            padding: 1rem;
            width: 95%;
        }

        #skill-modal-overlay .modal-title {
            font-size: 1.2rem;
        }

        #skill-modal-overlay .modal-icon {
            width: 32px;
            height: 32px;
        }

        #skill-modal-overlay .modal-icon :global(svg) {
            width: 20px;
            height: 20px;
        }
    }
</style>
