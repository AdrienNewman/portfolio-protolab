---
// LiveLab Section - Real-time infrastructure monitoring
// "La preuve par le code" - Compétences démontrées en temps réel
---

<section class="section live-lab-section" id="live-lab">
    <div class="live-lab-container">
        <!-- Section Header -->
        <div class="section-header">
            <span class="section-label">Infrastructure</span>
            <h2 class="section-title">LIVE<span>_LAB</span></h2>
            <p class="section-desc">Mon homelab Protolab, en temps réel. La preuve par le code.</p>
        </div>

        <!-- Main Dashboard -->
        <div class="lab-dashboard">
            <!-- Status Header -->
            <div class="lab-header">
                <div class="status-indicator" data-lab-status>
                    <span class="status-dot"></span>
                    <span class="status-text">CONNECTING...</span>
                </div>
                <div class="last-update">
                    <span class="update-label">Dernière MAJ:</span>
                    <span class="update-time" data-lab-timestamp>--:--:--</span>
                </div>
            </div>

            <!-- Services Grid -->
            <div class="services-section">
                <h3 class="panel-title">/// SERVICES</h3>
                <div class="services-grid" data-lab-services>
                    <!-- Proxmox -->
                    <div class="service-card" data-service="proxmox">
                        <div class="service-icon">
                            <svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                                <path d="M21.5 12c0-5.24-4.26-9.5-9.5-9.5S2.5 6.76 2.5 12s4.26 9.5 9.5 9.5 9.5-4.26 9.5-9.5zm-9.5 8c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/>
                                <circle cx="12" cy="12" r="3"/>
                            </svg>
                        </div>
                        <div class="service-info">
                            <span class="service-name">Proxmox VE</span>
                            <span class="service-status" data-status="unknown">--</span>
                        </div>
                        <div class="service-uptime" data-uptime>--</div>
                    </div>

                    <!-- Palo Alto -->
                    <div class="service-card" data-service="paloalto">
                        <div class="service-icon">
                            <svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                                <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm0 10.99h7c-.53 4.12-3.28 7.79-7 8.94V12H5V6.3l7-3.11v8.8z"/>
                            </svg>
                        </div>
                        <div class="service-info">
                            <span class="service-name">Palo Alto</span>
                            <span class="service-status" data-status="unknown">--</span>
                        </div>
                        <div class="service-uptime" data-uptime>--</div>
                    </div>

                    <!-- Windows DC -->
                    <div class="service-card" data-service="dc01">
                        <div class="service-icon">
                            <svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                                <path d="M3 12V6.75l6-1.32v6.48L3 12zm17-9v8.75l-10 .15V5.21L20 3zM3 13l6 .09v6.81l-6-1.15V13zm17 .25V22l-10-1.91V13.1l10 .15z"/>
                            </svg>
                        </div>
                        <div class="service-info">
                            <span class="service-name">Windows DC01</span>
                            <span class="service-status" data-status="unknown">--</span>
                        </div>
                        <div class="service-uptime" data-uptime>--</div>
                    </div>

                    <!-- Grafana -->
                    <div class="service-card" data-service="grafana">
                        <div class="service-icon">
                            <svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                                <path d="M22.7 12.6c-.1-.4-.5-.7-.9-.7h-.2c-.4-.6-.9-1.2-1.5-1.6.1-.4.1-.9 0-1.3-.1-.4-.5-.6-.9-.5-.4.1-.7.4-.8.8-.4.2-.8.5-1.1.8-.3-.1-.6-.1-.9-.1-1.1 0-2.2.4-3 1.1-.4-.2-.8-.3-1.2-.3-.7 0-1.3.3-1.8.7-.5-.2-1.1-.3-1.7-.3-.6 0-1.2.1-1.7.4-.5-.3-1.1-.5-1.8-.5-.7 0-1.3.2-1.8.6-.3-.1-.6-.1-.9-.1-.9 0-1.6.5-2 1.2h-.1c-.5 0-.9.4-1 .9-.1.5.2 1 .7 1.1.3.7.9 1.3 1.6 1.6 0 .1 0 .2-.1.3-.1.5.2 1 .7 1.1.5.1 1-.1 1.2-.6.4.1.7.1 1.1.1h.3c.3.5.8.9 1.4 1.1.1.5.5.8 1 .8h.1c.5 0 .9-.4 1-.9.3 0 .7-.1 1-.2.4.4.9.6 1.5.6.3 0 .6-.1.9-.2.4.3.9.5 1.4.5.4 0 .8-.1 1.1-.3.5.2 1 .3 1.5.3.5 0 1-.1 1.4-.3.3.1.6.2 1 .2.8 0 1.5-.4 2-1 .5 0 .9-.3 1.1-.8.2-.5 0-1-.4-1.3.2-.4.3-.8.3-1.2 0-.2 0-.5-.1-.7.4-.4.6-.9.6-1.5-.1-.4-.2-.7-.4-1z"/>
                            </svg>
                        </div>
                        <div class="service-info">
                            <span class="service-name">Grafana</span>
                            <span class="service-status" data-status="unknown">--</span>
                        </div>
                        <div class="service-uptime" data-uptime>--</div>
                    </div>
                </div>
            </div>

            <!-- Resources Panel -->
            <div class="resources-section">
                <h3 class="panel-title">/// RESOURCES</h3>
                <div class="resources-grid">
                    <!-- CPU -->
                    <div class="resource-meter" data-resource="cpu">
                        <div class="meter-header">
                            <span class="meter-label">CPU</span>
                            <span class="meter-value" data-value>--%</span>
                        </div>
                        <div class="meter-track">
                            <div class="meter-fill" style="width: 0%"></div>
                        </div>
                    </div>

                    <!-- Memory -->
                    <div class="resource-meter" data-resource="memory">
                        <div class="meter-header">
                            <span class="meter-label">RAM</span>
                            <span class="meter-value" data-value>--%</span>
                        </div>
                        <div class="meter-track">
                            <div class="meter-fill" style="width: 0%"></div>
                        </div>
                        <div class="meter-detail" data-detail>-- / -- GB</div>
                    </div>

                    <!-- Disk -->
                    <div class="resource-meter" data-resource="disk">
                        <div class="meter-header">
                            <span class="meter-label">DISK</span>
                            <span class="meter-value" data-value>--%</span>
                        </div>
                        <div class="meter-track">
                            <div class="meter-fill" style="width: 0%"></div>
                        </div>
                        <div class="meter-detail" data-detail>-- / -- TB</div>
                    </div>
                </div>
            </div>

            <!-- Network Panel -->
            <div class="network-section">
                <h3 class="panel-title">/// NETWORK</h3>
                <div class="network-stats">
                    <div class="network-stat inbound">
                        <span class="net-icon">▼</span>
                        <span class="net-label">IN</span>
                        <span class="net-value" data-net-in>--</span>
                    </div>
                    <div class="network-stat outbound">
                        <span class="net-icon">▲</span>
                        <span class="net-label">OUT</span>
                        <span class="net-value" data-net-out>--</span>
                    </div>
                </div>
            </div>

            <!-- Offline Fallback -->
            <div class="offline-message" data-lab-offline hidden>
                <span class="offline-icon">⚡</span>
                <span class="offline-text">Monitoring temporairement indisponible</span>
            </div>
        </div>

        <!-- Future modules placeholder -->
        <div class="coming-soon">
            <span class="coming-label">COMING SOON</span>
            <div class="coming-items">
                <span class="coming-item">ARIA Chatbot</span>
                <span class="coming-sep">•</span>
                <span class="coming-item">Terminal Interactif</span>
                <span class="coming-sep">•</span>
                <span class="coming-item">Log Viewer</span>
            </div>
        </div>
    </div>
</section>

<style>
    .live-lab-section {
        position: relative;
        z-index: 1;
        padding: 8rem 2rem;
    }

    .live-lab-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Section Header */
    .section-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .section-label {
        display: inline-block;
        font-family: 'Space Mono', monospace;
        font-size: 0.75rem;
        font-weight: 700;
        letter-spacing: 0.3em;
        text-transform: uppercase;
        color: var(--neon-green);
        margin-bottom: 1rem;
        padding: 0.5rem 1rem;
        border: 1px solid var(--neon-green);
    }

    .section-title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: clamp(3rem, 8vw, 5rem);
        letter-spacing: 0.02em;
        line-height: 1;
        margin-bottom: 1.5rem;
        color: var(--white);
    }

    .section-title span {
        color: var(--neon-green);
    }

    .section-desc {
        font-size: 1rem;
        color: var(--gray-light);
        max-width: 500px;
        margin: 0 auto;
        line-height: 1.6;
    }

    /* Dashboard Container */
    .lab-dashboard {
        background: rgba(0, 0, 0, 0.6);
        border: 2px solid var(--neon-cyan);
        padding: 2rem;
        position: relative;
    }

    .lab-dashboard::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.03) 0%, transparent 50%);
        pointer-events: none;
    }

    /* Lab Header */
    .lab-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid rgba(0, 255, 255, 0.2);
        margin-bottom: 2rem;
    }

    .status-indicator {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .status-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: var(--gray-mid);
        animation: pulse 2s infinite;
    }

    .status-indicator[data-status="online"] .status-dot {
        background: var(--neon-green);
        box-shadow: 0 0 10px var(--neon-green);
    }

    .status-indicator[data-status="degraded"] .status-dot {
        background: var(--neon-yellow);
        box-shadow: 0 0 10px var(--neon-yellow);
    }

    .status-indicator[data-status="offline"] .status-dot {
        background: var(--neon-magenta);
        box-shadow: 0 0 10px var(--neon-magenta);
        animation: none;
    }

    @keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
    }

    .status-text {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.85rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--white);
    }

    .last-update {
        font-family: 'Space Mono', monospace;
        font-size: 0.75rem;
        color: var(--gray-light);
    }

    .update-time {
        color: var(--neon-cyan);
        margin-left: 0.5rem;
    }

    /* Panel Titles */
    .panel-title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 1.25rem;
        color: var(--neon-cyan);
        letter-spacing: 0.1em;
        margin-bottom: 1rem;
    }

    /* Services Grid */
    .services-section {
        margin-bottom: 2rem;
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }

    .service-card {
        background: rgba(0, 0, 0, 0.4);
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 1rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: all 0.3s ease;
    }

    .service-card:hover {
        border-color: var(--neon-cyan);
        transform: translateY(-2px);
    }

    .service-card[data-active="true"] {
        border-color: var(--neon-green);
    }

    .service-icon {
        color: var(--gray-mid);
        flex-shrink: 0;
    }

    .service-card[data-active="true"] .service-icon {
        color: var(--neon-green);
    }

    .service-info {
        flex: 1;
        min-width: 0;
    }

    .service-name {
        display: block;
        font-family: 'Space Mono', monospace;
        font-size: 0.8rem;
        font-weight: 700;
        color: var(--white);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .service-status {
        display: block;
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.7rem;
        margin-top: 0.25rem;
        color: var(--gray-mid);
    }

    .service-status[data-status="up"] {
        color: var(--neon-green);
    }

    .service-status[data-status="down"] {
        color: var(--neon-magenta);
    }

    .service-uptime {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.65rem;
        color: var(--gray-light);
        text-align: right;
    }

    /* Resources Grid */
    .resources-section {
        margin-bottom: 2rem;
    }

    .resources-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
    }

    .resource-meter {
        background: rgba(0, 0, 0, 0.3);
        padding: 1rem;
        border-left: 3px solid var(--neon-cyan);
    }

    .meter-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
    }

    .meter-label {
        font-family: 'Space Mono', monospace;
        font-size: 0.75rem;
        font-weight: 700;
        color: var(--white);
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .meter-value {
        font-family: 'JetBrains Mono', monospace;
        font-size: 1rem;
        font-weight: 700;
        color: var(--neon-cyan);
    }

    .meter-track {
        height: 8px;
        background: rgba(255, 255, 255, 0.1);
        position: relative;
        overflow: hidden;
    }

    .meter-fill {
        height: 100%;
        background: linear-gradient(90deg, var(--neon-cyan), var(--neon-green));
        transition: width 0.5s ease;
    }

    .meter-fill.warning {
        background: linear-gradient(90deg, var(--neon-yellow), var(--neon-yellow));
    }

    .meter-fill.critical {
        background: linear-gradient(90deg, var(--neon-magenta), var(--neon-magenta));
    }

    .meter-detail {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.65rem;
        color: var(--gray-light);
        margin-top: 0.5rem;
        text-align: right;
    }

    /* Network Section */
    .network-section {
        margin-bottom: 1rem;
    }

    .network-stats {
        display: flex;
        gap: 2rem;
        justify-content: center;
    }

    .network-stat {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem 2rem;
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .net-icon {
        font-size: 1rem;
    }

    .inbound .net-icon {
        color: var(--neon-green);
    }

    .outbound .net-icon {
        color: var(--neon-magenta);
    }

    .net-label {
        font-family: 'Space Mono', monospace;
        font-size: 0.7rem;
        font-weight: 700;
        color: var(--gray-light);
        text-transform: uppercase;
    }

    .net-value {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.9rem;
        font-weight: 700;
        color: var(--white);
        min-width: 80px;
    }

    /* Offline Message */
    .offline-message {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: rgba(0, 0, 0, 0.9);
        border: 2px solid var(--neon-magenta);
        padding: 2rem 3rem;
        text-align: center;
        z-index: 10;
    }

    .offline-message[hidden] {
        display: none;
    }

    .offline-icon {
        display: block;
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    .offline-text {
        font-family: 'Space Mono', monospace;
        font-size: 0.85rem;
        color: var(--gray-light);
    }

    /* Coming Soon */
    .coming-soon {
        margin-top: 2rem;
        text-align: center;
        padding: 1.5rem;
        border: 1px dashed var(--gray-mid);
    }

    .coming-label {
        display: block;
        font-family: 'Space Mono', monospace;
        font-size: 0.65rem;
        font-weight: 700;
        color: var(--gray-mid);
        text-transform: uppercase;
        letter-spacing: 0.2em;
        margin-bottom: 0.75rem;
    }

    .coming-items {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .coming-item {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.75rem;
        color: var(--gray-light);
    }

    .coming-sep {
        color: var(--gray-mid);
    }

    /* Responsive */
    @media (max-width: 768px) {
        .live-lab-section {
            padding: 5rem 1.5rem;
        }

        .lab-dashboard {
            padding: 1.5rem;
        }

        .lab-header {
            flex-direction: column;
            gap: 1rem;
            text-align: center;
        }

        .services-grid {
            grid-template-columns: 1fr;
        }

        .resources-grid {
            grid-template-columns: 1fr;
        }

        .network-stats {
            flex-direction: column;
            gap: 1rem;
        }

        .network-stat {
            justify-content: center;
        }
    }
</style>
