---
// LiveLab Section - Real-time infrastructure monitoring
// "La preuve par le code" - Compétences démontrées en temps réel
---

<section class="section live-lab-section" id="live-lab">
    <div class="live-lab-container">
        <!-- Section Header -->
        <div class="section-header">
            <span class="section-label">Infrastructure</span>
            <h2 class="section-title">LIVE<span>_LAB</span></h2>
            <p class="section-desc">Mon homelab Protolab, en temps réel. La preuve par le code.</p>
        </div>

        <!-- Main Dashboard -->
        <div class="lab-dashboard">
            <!-- Status Header -->
            <div class="lab-header">
                <div class="status-indicator" data-lab-status>
                    <span class="status-dot"></span>
                    <span class="status-text">CONNECTING...</span>
                </div>
                <div class="last-update">
                    <span class="update-label">Dernière MAJ:</span>
                    <span class="update-time" data-lab-timestamp>--:--:--</span>
                </div>
            </div>

            <!-- MANAGEMENT Category -->
            <div class="category-section" data-category="management">
                <div class="category-header">
                    <h3 class="category-title">MANAGEMENT</h3>
                    <span class="category-counter" data-category-counter>0/2</span>
                </div>
                <div class="services-grid">
                    <!-- Proxmox -->
                    <div class="service-card" data-service="proxmox">
                        <div class="service-header">
                            <div class="service-icon">
                                <svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                                    <path d="M21.5 12c0-5.24-4.26-9.5-9.5-9.5S2.5 6.76 2.5 12s4.26 9.5 9.5 9.5 9.5-4.26 9.5-9.5zm-9.5 8c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/>
                                    <circle cx="12" cy="12" r="3"/>
                                </svg>
                            </div>
                            <div class="service-info">
                                <span class="service-name">Proxmox VE</span>
                                <span class="service-status" data-status="unknown">--</span>
                            </div>
                            <div class="service-uptime" data-uptime>--</div>
                        </div>
                        <div class="service-metrics">
                            <div class="service-metric">
                                <span class="metric-label">CPU</span>
                                <span class="metric-value" data-cpu>--%</span>
                            </div>
                            <div class="service-metric">
                                <span class="metric-label">RAM</span>
                                <span class="metric-value" data-memory>--%</span>
                            </div>
                        </div>
                    </div>

                    <!-- Palo Alto -->
                    <div class="service-card" data-service="paloalto">
                        <div class="service-header">
                            <div class="service-icon">
                                <svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                                    <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm0 10.99h7c-.53 4.12-3.28 7.79-7 8.94V12H5V6.3l7-3.11v8.8z"/>
                                </svg>
                            </div>
                            <div class="service-info">
                                <span class="service-name">Palo Alto FW</span>
                                <span class="service-status" data-status="unknown">--</span>
                            </div>
                            <div class="service-uptime" data-uptime>--</div>
                        </div>
                        <div class="service-metrics">
                            <div class="service-metric">
                                <span class="metric-label">CPU</span>
                                <span class="metric-value" data-cpu>--%</span>
                            </div>
                            <div class="service-metric">
                                <span class="metric-label">RAM</span>
                                <span class="metric-value" data-memory>--%</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- INFRASTRUCTURE Category -->
            <div class="category-section" data-category="infrastructure">
                <div class="category-header">
                    <h3 class="category-title">INFRASTRUCTURE</h3>
                    <span class="category-counter" data-category-counter>0/5</span>
                </div>
                <div class="services-grid">
                    <!-- Grafana -->
                    <div class="service-card" data-service="grafana">
                        <div class="service-header">
                            <div class="service-icon">
                                <svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                                    <path d="M22 5v2h-3v3h-2V7h-3V5h3V2h2v3h3zm-3 14H5V5h6V3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2v-6h-2v6z"/>
                                    <path d="M7 17h2v-7H7v7zm4 0h2v-4h-2v4zm4 0h2v-2h-2v2z"/>
                                </svg>
                            </div>
                            <div class="service-info">
                                <span class="service-name">Grafana</span>
                                <span class="service-status" data-status="unknown">--</span>
                            </div>
                            <div class="service-uptime" data-uptime>--</div>
                        </div>
                        <div class="service-metrics">
                            <div class="service-metric">
                                <span class="metric-label">CPU</span>
                                <span class="metric-value" data-cpu>--%</span>
                            </div>
                            <div class="service-metric">
                                <span class="metric-label">RAM</span>
                                <span class="metric-value" data-memory>--%</span>
                            </div>
                        </div>
                    </div>

                    <!-- VictoriaLogs -->
                    <div class="service-card" data-service="victorialogs">
                        <div class="service-header">
                            <div class="service-icon">
                                <svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                                    <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 14H6v-2h6v2zm4-4H6v-2h10v2zm0-4H6V7h10v2z"/>
                                </svg>
                            </div>
                            <div class="service-info">
                                <span class="service-name">VictoriaLogs</span>
                                <span class="service-status" data-status="unknown">--</span>
                            </div>
                            <div class="service-uptime" data-uptime>--</div>
                        </div>
                        <div class="service-metrics">
                            <div class="service-metric">
                                <span class="metric-label">CPU</span>
                                <span class="metric-value" data-cpu>--%</span>
                            </div>
                            <div class="service-metric">
                                <span class="metric-label">RAM</span>
                                <span class="metric-value" data-memory>--%</span>
                            </div>
                        </div>
                    </div>

                    <!-- OTel Collector -->
                    <div class="service-card" data-service="otelcol">
                        <div class="service-header">
                            <div class="service-icon">
                                <svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                                </svg>
                            </div>
                            <div class="service-info">
                                <span class="service-name">OTel Collector</span>
                                <span class="service-status" data-status="unknown">--</span>
                            </div>
                            <div class="service-uptime" data-uptime>--</div>
                        </div>
                        <div class="service-metrics">
                            <div class="service-metric">
                                <span class="metric-label">CPU</span>
                                <span class="metric-value" data-cpu>--%</span>
                            </div>
                            <div class="service-metric">
                                <span class="metric-label">RAM</span>
                                <span class="metric-value" data-memory>--%</span>
                            </div>
                        </div>
                    </div>

                    <!-- Control Plane -->
                    <div class="service-card" data-service="controlplane">
                        <div class="service-header">
                            <div class="service-icon">
                                <svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                                    <path d="M20 18c1.1 0 1.99-.9 1.99-2L22 6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2H0v2h24v-2h-4zM4 6h16v10H4V6z"/>
                                </svg>
                            </div>
                            <div class="service-info">
                                <span class="service-name">Control Plane</span>
                                <span class="service-status" data-status="unknown">--</span>
                            </div>
                            <div class="service-uptime" data-uptime>--</div>
                        </div>
                        <div class="service-metrics">
                            <div class="service-metric">
                                <span class="metric-label">CPU</span>
                                <span class="metric-value" data-cpu>--%</span>
                            </div>
                            <div class="service-metric">
                                <span class="metric-label">RAM</span>
                                <span class="metric-value" data-memory>--%</span>
                            </div>
                        </div>
                    </div>

                    <!-- MinIO -->
                    <div class="service-card" data-service="minio">
                        <div class="service-header">
                            <div class="service-icon">
                                <svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                                    <path d="M19.35 10.04C18.67 6.59 15.64 4 12 4 9.11 4 6.6 5.64 5.35 8.04 2.34 8.36 0 10.91 0 14c0 3.31 2.69 6 6 6h13c2.76 0 5-2.24 5-5 0-2.64-2.05-4.78-4.65-4.96zM19 18H6c-2.21 0-4-1.79-4-4s1.79-4 4-4h.71C7.37 7.69 9.48 6 12 6c3.04 0 5.5 2.46 5.5 5.5v.5H19c1.66 0 3 1.34 3 3s-1.34 3-3 3z"/>
                                </svg>
                            </div>
                            <div class="service-info">
                                <span class="service-name">MinIO</span>
                                <span class="service-status" data-status="unknown">--</span>
                            </div>
                            <div class="service-uptime" data-uptime>--</div>
                        </div>
                        <div class="service-metrics">
                            <div class="service-metric">
                                <span class="metric-label">CPU</span>
                                <span class="metric-value" data-cpu>--%</span>
                            </div>
                            <div class="service-metric">
                                <span class="metric-label">RAM</span>
                                <span class="metric-value" data-memory>--%</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- SERVICES Category -->
            <div class="category-section" data-category="services">
                <div class="category-header">
                    <h3 class="category-title">SERVICES</h3>
                    <span class="category-counter" data-category-counter>0/2</span>
                </div>
                <div class="services-grid">
                    <!-- Windows DC01 -->
                    <div class="service-card" data-service="dc01">
                        <div class="service-header">
                            <div class="service-icon">
                                <svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                                    <path d="M3 12V6.75l6-1.32v6.48L3 12zm17-9v8.75l-10 .15V5.21L20 3zM3 13l6 .09v6.81l-6-1.15V13zm17 .25V22l-10-1.91V13.1l10 .15z"/>
                                </svg>
                            </div>
                            <div class="service-info">
                                <span class="service-name">Windows DC01</span>
                                <span class="service-status" data-status="unknown">--</span>
                            </div>
                            <div class="service-uptime" data-uptime>--</div>
                        </div>
                        <div class="service-metrics">
                            <div class="service-metric">
                                <span class="metric-label">CPU</span>
                                <span class="metric-value" data-cpu>--%</span>
                            </div>
                            <div class="service-metric">
                                <span class="metric-label">RAM</span>
                                <span class="metric-value" data-memory>--%</span>
                            </div>
                        </div>
                    </div>

                    <!-- Web Gateway -->
                    <div class="service-card" data-service="webgateway">
                        <div class="service-header">
                            <div class="service-icon">
                                <svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                                </svg>
                            </div>
                            <div class="service-info">
                                <span class="service-name">Web Gateway</span>
                                <span class="service-status" data-status="unknown">--</span>
                            </div>
                            <div class="service-uptime" data-uptime>--</div>
                        </div>
                        <div class="service-metrics">
                            <div class="service-metric">
                                <span class="metric-label">CPU</span>
                                <span class="metric-value" data-cpu>--%</span>
                            </div>
                            <div class="service-metric">
                                <span class="metric-label">RAM</span>
                                <span class="metric-value" data-memory>--%</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Resources Panel -->
            <div class="resources-section">
                <h3 class="panel-title">/// RESOURCES (Proxmox Node)</h3>
                <div class="resources-grid">
                    <!-- CPU -->
                    <div class="resource-meter" data-resource="cpu">
                        <div class="meter-header">
                            <span class="meter-label">CPU</span>
                            <span class="meter-value" data-value>--%</span>
                        </div>
                        <div class="meter-track">
                            <div class="meter-fill" style="width: 0%"></div>
                        </div>
                    </div>

                    <!-- Memory -->
                    <div class="resource-meter" data-resource="memory">
                        <div class="meter-header">
                            <span class="meter-label">RAM</span>
                            <span class="meter-value" data-value>--%</span>
                        </div>
                        <div class="meter-track">
                            <div class="meter-fill" style="width: 0%"></div>
                        </div>
                        <div class="meter-detail" data-detail>-- / -- GB</div>
                    </div>

                    <!-- Disk -->
                    <div class="resource-meter" data-resource="disk">
                        <div class="meter-header">
                            <span class="meter-label">DISK</span>
                            <span class="meter-value" data-value>--%</span>
                        </div>
                        <div class="meter-track">
                            <div class="meter-fill" style="width: 0%"></div>
                        </div>
                        <div class="meter-detail" data-detail>-- / -- TB</div>
                    </div>
                </div>
            </div>

            <!-- Network Panel -->
            <div class="network-section">
                <h3 class="panel-title">/// NETWORK</h3>
                <div class="network-stats">
                    <div class="network-stat inbound">
                        <span class="net-icon">▼</span>
                        <span class="net-label">IN</span>
                        <span class="net-value" data-net-in>--</span>
                    </div>
                    <div class="network-stat outbound">
                        <span class="net-icon">▲</span>
                        <span class="net-label">OUT</span>
                        <span class="net-value" data-net-out>--</span>
                    </div>
                </div>
            </div>

            <!-- Offline Fallback -->
            <div class="offline-message" data-lab-offline hidden>
                <span class="offline-icon">⚡</span>
                <span class="offline-text">Monitoring temporairement indisponible</span>
            </div>
        </div>

        <!-- Future modules placeholder -->
        <div class="coming-soon">
            <span class="coming-label">COMING SOON</span>
            <div class="coming-items">
                <span class="coming-item">ARIA Chatbot</span>
                <span class="coming-sep">•</span>
                <span class="coming-item">Terminal Interactif</span>
                <span class="coming-sep">•</span>
                <span class="coming-item">Log Viewer</span>
            </div>
        </div>
    </div>
</section>

<style>
    .live-lab-section {
        position: relative;
        z-index: 1;
        padding: 8rem 2rem;
    }

    .live-lab-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Section Header */
    .section-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .section-label {
        display: inline-block;
        font-family: 'Space Mono', monospace;
        font-size: 0.75rem;
        font-weight: 700;
        letter-spacing: 0.3em;
        text-transform: uppercase;
        color: var(--neon-green);
        margin-bottom: 1rem;
        padding: 0.5rem 1rem;
        border: 1px solid var(--neon-green);
    }

    .section-title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: clamp(3rem, 8vw, 5rem);
        letter-spacing: 0.02em;
        line-height: 1;
        margin-bottom: 1.5rem;
        color: var(--white);
    }

    .section-title span {
        color: var(--neon-green);
    }

    .section-desc {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 1.2rem;
        color: var(--gray-light);
        max-width: 500px;
        margin: 0 auto;
        line-height: 1.4;
        letter-spacing: 0.05em;
        text-transform: uppercase;
    }

    /* Dashboard Container */
    .lab-dashboard {
        background: rgba(0, 0, 0, 0.6);
        border: 2px solid var(--neon-cyan);
        padding: 2rem;
        position: relative;
    }

    .lab-dashboard::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.03) 0%, transparent 50%);
        pointer-events: none;
    }

    /* Lab Header */
    .lab-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid rgba(0, 255, 255, 0.2);
        margin-bottom: 2rem;
    }

    .status-indicator {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .status-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: var(--gray-mid);
        animation: pulse 2s infinite;
    }

    .status-indicator[data-status="online"] .status-dot {
        background: var(--neon-green);
        box-shadow: 0 0 10px var(--neon-green);
    }

    .status-indicator[data-status="degraded"] .status-dot {
        background: var(--neon-yellow);
        box-shadow: 0 0 10px var(--neon-yellow);
    }

    .status-indicator[data-status="offline"] .status-dot {
        background: var(--neon-magenta);
        box-shadow: 0 0 10px var(--neon-magenta);
        animation: none;
    }

    @keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
    }

    .status-text {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.85rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--white);
    }

    .last-update {
        font-family: 'Space Mono', monospace;
        font-size: 0.75rem;
        color: var(--gray-light);
    }

    .update-time {
        color: var(--neon-cyan);
        margin-left: 0.5rem;
    }

    /* Category Sections */
    .category-section {
        margin-bottom: 2rem;
    }

    .category-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .category-title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 1.1rem;
        letter-spacing: 0.15em;
        margin: 0;
    }

    /* Category colors */
    [data-category="management"] .category-title {
        color: var(--neon-cyan);
    }

    [data-category="management"] .category-header {
        border-bottom-color: rgba(0, 255, 255, 0.3);
    }

    [data-category="infrastructure"] .category-title {
        color: var(--neon-green);
    }

    [data-category="infrastructure"] .category-header {
        border-bottom-color: rgba(0, 255, 136, 0.3);
    }

    [data-category="services"] .category-title {
        color: var(--neon-magenta);
    }

    [data-category="services"] .category-header {
        border-bottom-color: rgba(255, 0, 255, 0.3);
    }

    .category-counter {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.75rem;
        font-weight: 700;
        color: var(--gray-light);
        padding: 0.25rem 0.5rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 2px;
    }

    /* Panel Titles */
    .panel-title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 1.25rem;
        color: var(--neon-cyan);
        letter-spacing: 0.1em;
        margin-bottom: 1rem;
    }

    /* Services Grid */
    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 0.75rem;
    }

    .service-card {
        background: rgba(0, 0, 0, 0.4);
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 0.875rem;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        transition: all 0.3s ease;
    }

    .service-card:hover {
        border-color: var(--neon-cyan);
        transform: translateY(-2px);
    }

    .service-card[data-active="true"] {
        border-color: var(--neon-green);
    }

    .service-card[data-active="false"] {
        opacity: 0.5;
        border-color: rgba(255, 255, 255, 0.05);
    }

    .service-card[data-active="false"]:hover {
        opacity: 0.7;
        border-color: rgba(255, 255, 255, 0.2);
    }

    .service-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .service-icon {
        color: var(--gray-mid);
        flex-shrink: 0;
        width: 20px;
        height: 20px;
    }

    .service-icon svg {
        width: 100%;
        height: 100%;
    }

    .service-card[data-active="true"] .service-icon {
        color: var(--neon-green);
    }

    .service-info {
        flex: 1;
        min-width: 0;
    }

    .service-name {
        display: block;
        font-family: 'Space Mono', monospace;
        font-size: 0.7rem;
        font-weight: 700;
        color: var(--white);
        text-transform: uppercase;
        letter-spacing: 0.03em;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .service-status {
        display: block;
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.6rem;
        margin-top: 0.15rem;
        color: var(--gray-mid);
    }

    .service-status[data-status="up"] {
        color: var(--neon-green);
    }

    .service-status[data-status="down"] {
        color: var(--neon-magenta);
    }

    .service-uptime {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.55rem;
        color: var(--gray-light);
        text-align: right;
