    .fill-magenta { background: var(--neon-magenta); box-shadow: 0 0 15px var(--neon-magenta); }
    .fill-green { background: var(--neon-green); box-shadow: 0 0 15px var(--neon-green); }
    .fill-yellow { background: var(--neon-yellow); box-shadow: 0 0 15px var(--neon-yellow); }

