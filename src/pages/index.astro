    .soft-val { color: var(--neon-cyan); }

    .soft-bar-bg {
        width: 100%;
        height: 10px;
        background: var(--gray-mid);
        position: relative;
        overflow: hidden;
        transform: skewX(-20deg);
    }

    .soft-bar-fill {
        height: 100%;
        transition: width 1s ease;
    }

    .soft-bar-fill::after {
        content: '';
        position: absolute;
        top: 0; right: 0; bottom: 0;
        width: 5px;
        background: rgba(255,255,255,0.8);
        box-shadow: 0 0 10px rgba(255,255,255,0.8);
    }

