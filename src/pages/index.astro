---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/layout/Navbar.astro';
import MobileMenu from '../components/layout/MobileMenu.astro';
import Hero from '../components/sections/Hero.astro';
import Skills from '../components/sections/Skills.astro';
import Profile from '../components/sections/Profile.astro';
import ProjectGallery from '../components/ui/ProjectGallery.astro';
import Documentation from '../components/sections/Documentation.astro';
import Contact from '../components/sections/Contact.astro';
import Footer from '../components/layout/Footer.astro';
import LiveLab from '../components/sections/LiveLab.astro';

// Generic components (replaces 21 individual modal files)
import SkillPreview from '../components/ui/SkillPreview.astro';
import SkillModal from '../components/ui/SkillModal.astro';
import ProjectModal from '../components/ui/ProjectModal.astro';

// Centralized data
import { skills } from '../data/skills';
import { projectModals } from '../data/projectModals';
---

<BaseLayout
    title="Adrien Mercadier | TSSR - Portfolio"
    description="Portfolio de Adrien Mercadier - Technicien Supérieur Systèmes et Réseaux spécialisé en infrastructure, virtualisation et monitoring"
>
    <!-- Navigation -->
    <Navbar />
    <MobileMenu />

    <!-- Main Portfolio -->
    <div id="main-portfolio">
        <!-- Page Sections -->
        <Hero />
        <Skills />
        <Profile />
        <ProjectGallery />
        <LiveLab />
        <Documentation />
        <Contact />

        <!-- ============================================
             SKILL MODALS (Generated from centralized data)
             ============================================ -->
        <!-- Preview modals (hover) - Generated dynamically -->
        {skills.map(skill => (
            <SkillPreview
                id={skill.id}
                title={skill.previewTitle}
                description={skill.previewDescription}
                tags={skill.previewTags}
                iconName={skill.icon}
                modalId={`modal-${skill.id}`}
            />
        ))}

        <!-- Detail modals - Generated dynamically -->
        {skills.map(skill => (
            <SkillModal
                id={skill.id}
                title={skill.modalTitle}
                iconName={skill.icon}
                sections={skill.sections}
            />
        ))}

        <!-- ============================================
             PROJECT MODALS (Generated from centralized data)
             ============================================ -->
        {projectModals.map(project => (
            <ProjectModal
                id={project.id}
                title={project.title}
                iconSvg={project.iconSvg}
                iconColorClass={project.iconColorClass}
                sections={project.sections}
            />
        ))}
    </div>

    <!-- Footer -->
    <Footer />
</BaseLayout>

<style is:global>
    #main-portfolio {
        opacity: 1;
    }

    /* Fix Hero positioning - make sure it starts at top of viewport */
    .hero {
        margin-top: 0 !important;
    }

    /* Ensure navigation doesn't push content down */
    .nav {
        position: fixed !important;
        top: 0 !important;
        z-index: 1000 !important;
    }

    /* Quand le menu mobile est ouvert, la navbar passe devant */
    body.menu-open .nav {
        z-index: 1003 !important;
    }

    /* Make sure Three.js canvas is behind and doesn't take space */
    #three-canvas {
        position: fixed !important;
        top: 0 !important;
        left: 0 !important;
        width: 100% !important;
        height: 100% !important;
        z-index: 0 !important;
        pointer-events: none !important;
    }

    /* Ensure main portfolio content is above canvas */
    #main-portfolio {
        position: relative;
        z-index: 1;
    }

    /* FORCE ALL ELEMENTS TO BE VISIBLE - Override all component opacity animations */
    .hero .status-badge,
    .hero .hero-title,
    .hero .hero-subtitle,
    .hero .typing-wrapper,
    .hero .cta-wrapper,
    .hero .scroll-indicator,
    .hero .stat-item,
    .section-label,
    .section-title,
    .section-desc,
    .skill-card,
    .project-card,
    .project-header,
    .project-content {
        opacity: 1 !important;
        transform: none !important;
        animation: none !important;
    }

    /* Profile Section */
    #profil {
        padding: 120px 40px;
        background: transparent;
    }

    .profile-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 40px;
        align-items: stretch;
        max-width: 1400px;
        margin: 0 auto;
    }

    .profile-terminal-wrapper {
        background: rgba(10, 10, 10, 0.9);
        border: 1px solid var(--gray-mid);
        border-radius: 6px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        overflow: hidden;
        transition: border-color 0.3s ease;
        display: flex;
        flex-direction: column;
    }

    .profile-terminal-wrapper:hover {
        border-color: var(--neon-cyan);
    }

    .terminal-header {
        background: var(--gray-dark);
        padding: 8px 12px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .terminal-buttons { display: flex; gap: 5px; }
    .t-btn { width: 10px; height: 10px; border-radius: 50%; display: inline-block; }
    .t-btn.close { background: #ff5f56; }
    .t-btn.min { background: #ffbd2e; }
    .t-btn.max { background: #27c93f; }

    .terminal-title {
        flex-grow: 1;
        text-align: center;
        font-family: 'Space Mono', monospace;
        font-size: 12px;
        color: var(--gray-light);
    }

    .profile-terminal-body {
        padding: 15px;
        font-family: 'JetBrains Mono', monospace;
        font-size: 12px;
        line-height: 1.5;
        color: var(--gray-light);
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .term-line {
        margin: 6px 0;
    }

    .term-prompt {
        color: var(--neon-green);
        margin-right: 6px;
    }

    .term-cmd {
        color: var(--neon-cyan);
    }

    .term-output {
        color: var(--white);
        margin: 4px 0 10px 0;
    }

    .term-text-block {
        margin: 10px 0;
        padding-left: 12px;
        border-left: 2px solid var(--gray-mid);
        color: var(--gray-lighter);
    }

    .term-text-block p {
        margin: 5px 0;
        font-size: 11px;
    }

    .highlight-magenta { color: var(--neon-magenta); }
    .text-neon-green { color: var(--neon-green); font-weight: bold; }

    .soft-skills-wrapper { padding: 0; }

    .soft-title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 28px;
        color: var(--white);
        margin-bottom: 20px;
        letter-spacing: 1px;
    }

    .blink { animation: blink 1s infinite; }

    @keyframes blink {
        0%, 100% { opacity: 1; }
        50% { opacity: 0; }
    }

    .soft-skill-item { margin-bottom: 16px; }

    .soft-info {
        display: flex;
        justify-content: space-between;
        margin-bottom: 6px;
        font-family: 'Space Mono', monospace;
        font-size: 11px;
        text-transform: uppercase;
    }

    .soft-label { color: var(--white); }
    .soft-val { color: var(--neon-cyan); }

    .soft-bar-bg {
        width: 100%;
        height: 8px;
        background: var(--gray-mid);
        position: relative;
        overflow: hidden;
        transform: skewX(-20deg);
    }

    .soft-bar-fill {
        height: 100%;
        transition: width 1s ease;
    }

    .soft-bar-fill::after {
        content: '';
        position: absolute;
        top: 0; right: 0; bottom: 0;
        width: 5px;
        background: rgba(255,255,255,0.8);
        box-shadow: 0 0 10px rgba(255,255,255,0.8);
    }

    .fill-cyan { background: var(--neon-cyan); box-shadow: 0 0 15px var(--neon-cyan); }
    .fill-magenta { background: var(--neon-magenta); box-shadow: 0 0 15px var(--neon-magenta); }
    .fill-green { background: var(--neon-green); box-shadow: 0 0 15px var(--neon-green); }
    .fill-yellow { background: var(--neon-yellow); box-shadow: 0 0 15px var(--neon-yellow); }

    .mini-stats-grid {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }

    .mini-stat {
        flex: 1;
        background: rgba(255,255,255,0.05);
        border: 1px solid rgba(255,255,255,0.1);
        padding: 15px;
        text-align: center;
        transition: 0.3s;
    }

    .mini-stat:hover {
        border-color: var(--neon-cyan);
        transform: translateY(-5px);
    }

    .ms-icon { font-size: 24px; display: block; margin-bottom: 8px; }
    .ms-label { font-family: 'Space Mono'; font-size: 11px; color: var(--gray-light); text-transform: uppercase; }

    /* Profile Section Responsive */
    @media (max-width: 900px) {
        .profile-grid {
            grid-template-columns: 1fr;
            gap: 3rem;
        }

        .soft-skills-wrapper {
            max-width: 100%;
        }
    }

    @media (max-width: 768px) {
        /* Réduire padding section Profile */
        #profil {
            padding: 60px 15px;
        }

        .profile-terminal-body {
            padding: 1rem;
            font-size: 0.7rem;
        }

        .term-line {
            font-size: 0.65rem;
            margin: 4px 0;
        }

        .term-text-block {
            margin: 8px 0;
            padding-left: 8px;
        }

        .term-text-block p {
            font-size: 0.6rem;
            margin: 3px 0;
        }

        .soft-title {
            font-size: 1.1rem;
            margin-bottom: 15px;
        }

        .soft-skill-item {
            margin-bottom: 12px;
        }

        .soft-info {
            font-size: 0.6rem;
            margin-bottom: 4px;
        }

        .soft-bar-bg {
            height: 6px;
        }

        .mini-stats-grid {
            flex-direction: row;
            flex-wrap: wrap;
            gap: 8px;
            margin-top: 20px;
        }

        .mini-stat {
            flex: 1 1 calc(50% - 4px);
            min-width: calc(50% - 4px);
            padding: 10px;
        }

        .ms-icon {
            font-size: 18px;
            margin-bottom: 5px;
        }

        .ms-label {
            font-size: 0.55rem;
        }
    }

    @media (max-width: 480px) {
        #profil {
            padding: 40px 10px;
        }

        .profile-terminal-body {
            padding: 0.75rem;
        }

        .term-line {
            font-size: 0.6rem;
        }

        .soft-info {
            font-size: 0.55rem;
        }
    }

    /* Contact Section */
    .contact-section {
        padding: 120px 40px;
        background: transparent;
        text-align: center;
    }

    .contact-content {
        max-width: 600px;
        margin: 60px auto 0;
    }

    .contact-links {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .contact-link {
        display: flex;
        align-items: center;
        gap: 20px;
        padding: 20px;
        background: var(--gray-mid);
        border: 1px solid var(--gray-light);
        color: var(--white);
        text-decoration: none;
        transition: all 0.3s ease;
        font-family: 'JetBrains Mono', monospace;
    }

    .contact-link:hover {
        border-color: var(--neon-cyan);
        transform: translateX(10px);
        background: rgba(0, 255, 255, 0.05);
    }

    .contact-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--neon-cyan);
        color: var(--black);
        font-weight: bold;
        font-size: 20px;
    }

    /* Footer */
    .footer {
        padding: 40px 20px;
        background: var(--black);
        border-top: 1px solid var(--gray-mid);
    }

    .footer-inner {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-family: 'JetBrains Mono', monospace;
        font-size: 14px;
    }

    .footer-text {
        color: var(--gray-light);
    }

    .footer-separator {
        color: var(--gray-mid);
        margin: 0 15px;
    }

    .footer-left {
        display: flex;
        align-items: center;
    }

    /* Back to Top */
    .back-to-top {
        position: fixed;
        bottom: 40px;
        right: 40px;
        width: 50px;
        height: 50px;
        background: var(--neon-cyan);
        color: var(--black);
        border: none;
        cursor: pointer;
        font-size: 24px;
        font-weight: bold;
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.3s ease;
        z-index: 1000;
        pointer-events: none;
    }

    .back-to-top.visible {
        opacity: 1;
        transform: translateY(0);
        pointer-events: all;
    }

    .back-to-top:hover {
        background: var(--neon-magenta);
    }

    /* Modal Styles */
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.9);
        z-index: 10000;
        display: none;
        align-items: center;
        justify-content: center;
        backdrop-filter: blur(10px);
    }

    .modal-overlay.active {
        display: flex;
    }

    .modal-content {
        background: var(--gray-dark);
        border: 2px solid var(--neon-cyan);
        max-width: 800px;
        max-height: 80vh;
        overflow-y: auto;
        position: relative;
        padding: 40px;
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        border-bottom: 1px solid var(--gray-mid);
        padding-bottom: 20px;
    }

    .modal-title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 32px;
        color: var(--neon-cyan);
    }

    .modal-close {
        background: transparent;
        border: 1px solid var(--gray-light);
        color: var(--white);
        width: 40px;
        height: 40px;
        font-size: 24px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .modal-close:hover {
        border-color: var(--neon-magenta);
        color: var(--neon-magenta);
    }

    .modal-body h4 {
        color: var(--neon-cyan);
        font-size: 20px;
        margin: 20px 0 15px;
        font-family: 'Space Mono', monospace;
    }

    .modal-body ul {
        list-style: none;
        padding-left: 0;
    }

    .modal-body li {
        color: var(--gray-light);
        margin-bottom: 10px;
        padding-left: 20px;
        position: relative;
    }

    .modal-body li:before {
        content: "▸";
        color: var(--neon-green);
        position: absolute;
        left: 0;
    }

    @media (max-width: 768px) {
        .footer-inner {
            flex-direction: column;
            gap: 15px;
            text-align: center;
        }

        .footer-separator {
            display: none;
        }

        .contact-section {
            padding: 80px 20px;
        }
    }
</style>

<script>
    // Scroll to top on page load
    document.addEventListener('DOMContentLoaded', () => {
        window.scrollTo({ top: 0, behavior: 'instant' });
    });
</script>
