<script>
    // Debug: Log when portfolioReady event is received
    document.addEventListener('portfolioReady', () => {
        console.log('‚úì Portfolio ready event received');
        // Scroll to top when portfolio becomes visible
        window.scrollTo({ top: 0, behavior: 'instant' });
    });

    // Fallback: If portfolio doesn't show after 3 seconds, force it
    setTimeout(() => {
        const portfolio = document.getElementById('main-portfolio');
        if (portfolio && !portfolio.classList.contains('visible')) {
            console.warn('‚ö† Portfolio not visible after 3s, forcing display');
            portfolio.classList.add('visible');
            // Also scroll to top
            window.scrollTo({ top: 0, behavior: 'instant' });
        }
    }, 3000);

    // Debug on load
    window.addEventListener('load', () => {
        const portfolio = document.getElementById('main-portfolio');
        const hero = document.querySelector('.hero');
        const skills = document.querySelector('.skills-container');

        console.log('=== DEBUG INFO ===');
        console.log('Portfolio element:', portfolio ? 'FOUND' : 'NOT FOUND');
        console.log('Hero element:', hero ? 'FOUND' : 'NOT FOUND');
        console.log('Skills element:', skills ? 'FOUND' : 'NOT FOUND');

        if (portfolio) {
            console.log('Portfolio HTML length:', portfolio.innerHTML.length);
            console.log('Portfolio has visible class:', portfolio.classList.contains('visible'));
        }

        // Initialize modals
        initModals();
    });

    // Modal functionality
    function initModals() {
        // Add click handlers to skill cards
        document.querySelectorAll('.skill-card').forEach(card => {
            card.addEventListener('click', () => {
                const modalId = card.getAttribute('data-modal');
                if (modalId) {
                    openModal(modalId);
                }
            });
        });

        // Close buttons
        document.querySelectorAll('.modal-close').forEach(btn => {
            btn.addEventListener('click', (e) => {
                e.stopPropagation();
                closeAllModals();
            });
        });

        // Close on overlay click
        document.querySelectorAll('.modal-overlay').forEach(overlay => {
            overlay.addEventListener('click', (e) => {
                if (e.target === overlay) {
                    closeAllModals();
                }
            });
        });

        // Close on Escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                closeAllModals();
            }
        });
    }

    function openModal(modalId) {
        const modal = document.getElementById(modalId);
        if (modal) {
            modal.classList.add('active');
            document.body.style.overflow = 'hidden';
        }
    }

    function closeAllModals() {
        document.querySelectorAll('.modal-overlay').forEach(modal => {
            modal.classList.remove('active');
        });
        document.body.style.overflow = '';
    }
</script>
