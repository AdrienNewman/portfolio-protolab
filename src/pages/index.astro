    .hero .hero-title,
    .hero .hero-subtitle,
    .hero .typing-wrapper,
    .hero .cta-wrapper,
    .hero .scroll-indicator,
    .hero .stat-item,
    .section-label,
    .section-title,
    .section-desc,
    .skill-card,
    .project-card,
    .project-header,
    .project-content {
        opacity: 1 !important;
        transform: none !important;
        animation: none !important;
    }

    /* Profile Section */
    #profil {
        padding: 120px 40px;
        background: var(--black);
    }

    .profile-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 60px;
        align-items: center;
        max-width: 1400px;
        margin: 0 auto;
    }

    .profile-terminal-wrapper {
        background: rgba(10, 10, 10, 0.9);
        border: 1px solid var(--gray-mid);
        border-radius: 6px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        overflow: hidden;
        transition: border-color 0.3s ease;
    }

    .profile-terminal-wrapper:hover {
        border-color: var(--neon-cyan);
    }

    .terminal-header {
        background: var(--gray-dark);
        padding: 10px 15px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .terminal-buttons { display: flex; gap: 6px; }
    .t-btn { width: 12px; height: 12px; border-radius: 50%; display: inline-block; }
    .t-btn.close { background: #ff5f56; }
    .t-btn.min { background: #ffbd2e; }
    .t-btn.max { background: #27c93f; }

    .terminal-title {
        flex-grow: 1;
        text-align: center;
        font-family: 'Space Mono', monospace;
        font-size: 14px;
        color: var(--gray-light);
    }

    .profile-terminal-body {
        padding: 20px;
        font-family: 'JetBrains Mono', monospace;
        font-size: 14px;
        line-height: 1.6;
        color: var(--gray-light);
    }

    .term-line {
        margin: 10px 0;
    }

    .term-prompt {
        color: var(--neon-green);
        margin-right: 8px;
    }

    .term-cmd {
        color: var(--neon-cyan);
    }

    .term-output {
        color: var(--white);
        margin: 5px 0 15px 0;
    }

    .term-text-block {
        margin: 15px 0;
        padding-left: 15px;
        border-left: 2px solid var(--gray-mid);
        color: var(--gray-lighter);
    }

    .term-text-block p {
        margin: 8px 0;
    }

    .highlight-magenta { color: var(--neon-magenta); }
    .text-neon-green { color: var(--neon-green); font-weight: bold; }

    .soft-skills-wrapper { padding: 20px; }

    .soft-title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 32px;
        color: var(--white);
        margin-bottom: 30px;
        letter-spacing: 1px;
    }

    .blink { animation: blink 1s infinite; }

